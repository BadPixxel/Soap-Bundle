{% trans_default_domain "SoapBundle" %}
{% import "SoapBundle:Macros:buttons.html.twig"                   as Buttons %}
   
<div class="panel-group" id="accordion">

    <!-- Server Safety Description Block -->
    <div class="panel panel-default card">
        <div class="panel-heading card-header collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false">
            <h3 class="panel-title card-title text-primary">
                <i class="fa fa-fw fa-key"></i> 
                {{ 'show.info.security'|trans }}
            </h3>
        </div>
        <div id="collapseThree" class="panel-collapse collapse" aria-expanded="false">
            <div class="panel-body card-body">
                    {% include 'SoapBundle:Blocks:security.html.twig'  %}                                             
            </div>
        </div>
    </div>                                    
    <!-- End Server Safety Description Block -->


    <!-- Server Description Block -->
    <div class="panel panel-default card">
        <div class="panel-heading card-header" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="true">
            <h3 class="panel-title card-title text-primary">
                <i class="fa fa-fw fa-info-circle"></i> 
                {{ 'show.info.server'|trans }}
            </h3>
        </div>
        <div id="collapseTwo" class="panel-collapse collapse show" aria-expanded="true">
            <div class="panel-body card-body">
                {% include 'SoapBundle:Blocks:description.html.twig' %} 
                {{ Buttons.NewHostBtn(connector) }}
            </div>
        </div>
    </div>
    <!-- End Server Description Block --> 


</div>

  
       
{% trans_default_domain "SoapBundle" %}

{% macro NewKeysBtn(connector) %}
    
    {% set Url = path( "splash_connector_action" , { 
        "connectorName" : connector.profile.name, 
        "webserviceId" : connector.WebserviceId, 
        "action" : "newkeys"
    }) %}

    
    <a class="btn btn-lg btn-block btn-warning" href="{{ Url }}">
        <i class="fa fa-globe">&nbsp;</i>
        {{ 'newkeys.title'|trans }}
    </a>
        
{% endmacro %}  

{% macro NewHostBtn(connector) %}
    
    {% set Url = path( "splash_connector_action" , { 
        "connectorName" : connector.profile.name, 
        "webserviceId" : connector.WebserviceId, 
        "action" : "newhost"
    }) %}

    
    <a class="btn btn-lg btn-block btn-primary" href="{{ Url }}">
        <i class="fa fa-globe txt-color-white">&nbsp;</i>
        {{ 'new_host.label'|trans }}
    </a>

{% endmacro %}  